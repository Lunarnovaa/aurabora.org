---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';

const allBlogposts = await Astro.glob('./blogposts/*.md');
const pageTitle = "Blogposts";
const pageDescription = "My collection of blogposts.";
---
<BaseLayout pageTitle = {pageTitle} pageDescription = {pageDescription}>
	<ul>
		{allBlogposts.map((blogpost) => <BlogPost url={blogpost.url} title={blogpost.frontmatter.title} />)}
	</ul>
</BaseLayout>